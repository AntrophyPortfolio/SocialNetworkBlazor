@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">SocialNetworkBlazor</a>
</div>

<div>
    <ul class="nav flex-column">
        @foreach (var user in UserState.Value.Friends)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="@($"messages/{user.ContactId}")" Match="NavLinkMatch.All">

                    <span><img src="/storage/images/@user.ProfileImageTitle" alt="Profile image" width="24" height="24" /></span>

                    <div class="d-flex flex-fill text-left">
                        <span class="ml-3">@user.FullName</span>
                    </div>
                    <div class="d-flex flex-fill justify-content-end">
                        <span><img src="/images/@GetOnlineStatus(user)" alt="Alternate Text" width="8" height="8" /></span>
                    </div>
                </NavLink>
            </li>
        }
    </ul>
</div>
